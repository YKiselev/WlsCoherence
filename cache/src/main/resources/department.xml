<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.test.pof">

    <class name="Department" table="Departments">

        <id name="id">
            <generator class="assigned"/>
        </id>

        <property name="name" type="string" not-null="false" update="true"/>

        <property name="created" column="CreatedAt" type="timestamp" not-null="true" update="false"/>

    </class>

</hibernate-mapping>